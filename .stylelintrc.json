{
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/order": [
      "custom-properties",
      "declarations"
    ],
    "order/properties-order": [
      {
        "properties": [
          "position",
          "top",
          "right",
          "bottom",
          "left",
          "z-index"
        ]
      },
      {
        "properties": [
          "display",
          "flex",
          "flex-direction",
          "justify-content",
          "align-items"
        ]
      },
      {
        "properties": [
          "width",
          "height",
          "margin",
          "padding"
        ]
      },
      {
        "properties": [
          "font-size",
          "line-height",
          "color",
          "background-color"
        ]
      }
    ]
  }
}
